<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="001-create-table-cajas" author="Hugo Cobos">
        <createTable tableName="cat_cajas">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="ubicacion" type="VARCHAR(200)"/>
            <column name="ip_asignada" type="VARCHAR(45)"/>
            <column name="activa" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>

        <createTable tableName="operacion_sesiones_caja">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="caja_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_sesion_caja" references="cat_cajas(id)"/>
            </column>
            <column name="usuario_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="fecha_apertura" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="fecha_cierre" type="TIMESTAMP"/>
            <column name="saldo_inicial" type="DECIMAL(18, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="total_sistema" type="DECIMAL(19, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="total_declarado" type="DECIMAL(19, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="diferencia" type="DECIMAL(19, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="desglose_arqueo_json" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="observaciones" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="estatus" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="operacion_sesiones_caja" indexName="idx_sesion_activa_caja">
            <column name="caja_id"/>
            <column name="estatus"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-cri-table" author="Hugo Cobos">
        <createTable tableName="cat_rubros_ingresos">
            <column name="codigo_cri" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="descripcion" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cuenta_contable" type="VARCHAR(50)"/>
            <column name="nivel" type="INT"/>
            <column name="clave_concepto" type="VARCHAR(50)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-ingresos-tables" author="Hugo Cobos">
        <createTable tableName="operacion_ingresos">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="fecha_emision" type="TIMESTAMP"/>
            <column name="sesion_caja_id" type="UUID"/>
            <column name="total_cobrado" type="DECIMAL(18, 2)"/>
            <column name="estatus" type="VARCHAR(20)"/>
            <column name="metodo_pago" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="contribuyente_id" type="UUID"/>
            <column name="referencia_uuid" type="UUID">
                <constraints unique="true"/>
            </column>
        </createTable>

        <createIndex tableName="operacion_ingresos" indexName="idx_ingreso_fecha_estatus">
            <column name="estatus"/>
            <column name="fecha_emision"/>
        </createIndex>

        <createTable tableName="operacion_detalles_ingreso">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="ingreso_id" type="UUID">
                <constraints foreignKeyName="fk_detalle_ingreso" references="operacion_ingresos(id)"/>
            </column>
            <column name="codigo_cri" type="VARCHAR(20)">
                <constraints foreignKeyName="fk_detalle_rubro" references="cat_rubros_ingresos(codigo_cri)"/>
            </column>
            <column name="monto" type="DECIMAL(18, 2)"/>
            <column name="concepto_descripcion" type="VARCHAR(255)"/>
        </createTable>

        <createIndex tableName="operacion_detalles_ingreso" indexName="idx_detalle_ingreso_fk">
            <column name="ingreso_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-create-outbox-table" author="Hugo Cobos">
        <createTable tableName="eventos_integracion">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="tipo_evento" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="payload_json" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="estatus" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="fecha_creacion" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="eventos_integracion" indexName="idx_eventos_pendientes">
            <column name="estatus"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>